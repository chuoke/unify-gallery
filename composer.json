{
    "name": "chuoke/unify-gallery",
    "description": "This a unify collection of Unsplash/Pexels/Pixabay/Bing",
    "keywords": [
        "chuoke",
        "unify gallery",
        "image gallery"
    ],
    "homepage": "https://github.com/chuoke/unify-gallery",
    "license": "MIT",
    "authors": [
        {
            "name": "chuoke",
            "email": "chuokechungyoung@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20"
    },
    "autoload": {
        "psr-4": {
            "Chuoke\\UnifyGallery\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chuoke\\UnifyGallery\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
